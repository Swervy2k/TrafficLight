<Window x:Class="Traffic_Light.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Traffic_Light"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <Canvas HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" MouseDown="Canvas_MouseDown">
            <Rectangle Height="280" Canvas.Left="175" Stroke="Black" Width="145" Canvas.Top="10" Fill="Gray"/>
            <Ellipse Name="RedLight" Fill="Red" Height="75" Canvas.Left="212" Stroke="Black" Canvas.Top="23" Width="75" RenderTransformOrigin="0.949,0.009" MouseDown="Canvas_MouseDown"/>
            <Ellipse Name="AmberLight" Fill="Black" Height="75" Canvas.Left="212" Stroke="Black" Canvas.Top="115" Width="75"/>
            <Ellipse Name="GreenLight" Fill="Black" Height="75" Canvas.Left="212" Stroke="Black" Canvas.Top="202" Width="75"/>
        </Canvas>
    </Grid>
</Window>
